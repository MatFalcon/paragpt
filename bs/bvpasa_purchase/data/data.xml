<odoo>
    <data noupdate="0">
        <record forcecreate="True" id="enviar_correo_retenciones_exterior" model="ir.cron">
            <field name="name">Enviar correo de Aviso de Retención de facturas del Exterior</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field ref="account.model_account_move" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.getDataEmailRetencion()</field>
            <field eval="False" name="doall"/>
            <!--            <field name="function">True</field>-->
        </record>


        <record id="mail_template_retenciones_facturas_exterior" model="mail.template">
            <field name="name">Aviso de Retención de Facturas del Exterior: Enviar por Email</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">{{object.company_id.name}} (Retenciones pendientes por Facturas del Exterior)</field>
            <field name="email_from">{{(object.user_id.email_formatted)}}</field>
            <field name="email_to">{{object.company_id.email}}</field>
            <field name="partner_to">{{object.company_id.id}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="box-sizing:border-box;margin: 0px; padding: 0px; font-size: 13px;">
                        <font style="color: #6ba54a;">
                            <span style="font-size: 18px;">
                                <strong style="box-sizing:border-box;font-weight:500;">
                                    Texto a personalizar
                                </strong>
                            </span>
                        </font>
                    </p>
                    <h3 style="margin:0px 0 12px 0;box-sizing:border-box;">Detalle de las facturas</h3>
                    <t t-out="object.facturas_pendientes_retencion" contenteditable="false" data-oe-t-inline="true">
                    </t>
                </div>

            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>