<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='journal_id']/.." position="after">
                    <field name="retencion_generada" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
                </xpath>
                <xpath expr="//field[@name='move_type']" position="before">
                    <field name="purchase_message" invisible="1"/>
                    <div attrs="{'invisible':[('purchase_message','=',False)]}">
                        <h3 style="color:orange">El proveedor cuenta con una orden de compra por el mismo Ã­tem a facturar.</h3>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>