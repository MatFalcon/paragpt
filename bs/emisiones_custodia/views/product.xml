<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="emision_custodia_product_view_form_inherit" model="ir.ui.view">
            <field name="name">emision_custodia_product_view_form_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="es_emision" />
                    <field name="es_custodia" />
                    <field name="es_bono" attrs="{'invisible': [('es_emision', '=', False)]}" />
                </xpath>

            </field>
        </record>

    </data>
</odoo>