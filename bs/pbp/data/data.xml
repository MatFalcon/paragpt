<odoo>
    <data noupdate="1">

        <record id="pbp.secuencia_fondo_garantias" model="ir.sequence">
            <field name="name">Secuencia de periodo de fondos de garantia</field>
            <field name="code">seq_periodo_secuencia_garantias</field>
            <field name="implementation">no_gap</field>
            <field name="use_date_range">False</field>
            <field name="prefix">PFG-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
        </record>

        <record id="pbp.group_user" model="res.groups">
            <field name="name">Grupo PBP</field>
        </record>


        <record forcecreate="True" id="generar_asiento_cartera_inversion" model="ir.cron">
            <field name="name">Generar asiento de Cartera de Inversion</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field ref="pbp.model_pbp_cartera_inversion" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.generarAsientosVencimiento()</field>
            <field eval="False" name="doall"/>
            <!--            <field name="function">True</field>-->
        </record>


        <record forcecreate="True" id="enviar_correo_vencimientos" model="ir.cron">
            <field name="name">Enviar correo de Vencimientos de Capital e Intereses</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field ref="pbp.model_pbp_vencimiento_capital_interes" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.getEmailData()</field>
            <field eval="False" name="doall"/>
            <!--            <field name="function">True</field>-->
        </record>
    </data>
    <data noupdate="1">

        <record forcecreate="True" id="enviar_correo_intereses" model="ir.cron">
            <field name="name">Enviar correo de Vencimientos de Intereses</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field ref="pbp.model_pbp_vencimiento_interes" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.getEmailData()</field>
            <field eval="False" name="doall"/>
            <!--            <field name="function">True</field>-->
        </record>

        <record forcecreate="True" id="eliminar_liquidaciones" model="ir.cron">
            <field name="name">Eliminar liquidaciones</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field ref="pbp.model_pbp_liquidaciones" name="model_id"/>
            <field name="state">code</field>
            <field name="code">model.eliminarRegistros()</field>
            <field eval="False" name="doall"/>
            <!--            <field name="function">True</field>-->
        </record>

        <record id="mail_template_vencimientos_capital_interes" model="mail.template">
            <field name="name">Vencimiento de Capital e Interes: Enviar por Email</field>
            <field name="model_id" ref="pbp.model_pbp_vencimiento_capital_interes"/>
            <field name="subject">{{object.company_id.name}} (Vencimiento de Capital e Intereses de Cartera Propia a Fecha {{object.fecha_vencimiento }})</field>
            <field name="email_from">administracion@bolsadevalores.com.py</field>
            <field name="email_to">{{object.email_to}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">Buenos días equipo Administración y Finanzas,</p>
                    <br/>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">En fecha tenemos vencimientos correspondientes a la Cartera
                        Propia según se detalla a continuación:</p><br/>
                    <t t-out="object.texto" contenteditable="false" data-oe-t-inline="true"/>
                    <br/>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                        Favor tomar los recaudos necesarios de endoso y presentación
                        de documentación de respaldo en caso de que las entidades así lo requieran y
                        validar la acreditación de los importes en las cuentas habilitadas para el
                        efecto.</p>
                    <br/>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">Atentamente,<br/>
                    Bolsa de Valores y Productos de Asunción S.A.<br/>
                    Bulnes 830 c/ España<br/>
                    Asunción – Paraguay<br/>
                    +595 21 728-9123/5<br/>
                    <a href="http://www.bolsadevalores.com.py"
                       style="text-decoration:none;box-sizing:border-box;background-color:transparent;color:#008f8c;">
                        www.bolsadevalores.com.py</a></p>
                </div>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="mail_template_vencimientos_interes" model="mail.template">
            <field name="name">Vencimiento de Interes: Enviar por Email</field>
            <field name="model_id" ref="pbp.model_pbp_vencimiento_interes"/>
            <field name="subject">{{object.company_id.name}} (Vencimiento de Interes a Fecha {{object.fecha_vencimiento }})</field>
            <field name="email_from">administracion@bolsadevalores.com.py</field>
            <field name="email_to">{{object.email_to}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    Buenos días estimados, <br/>
                    Aguardamos los fondos correspondientes al vencimiento de intereses del día de hoy de
                    <t t-out="object.partner_id.name or ''" contenteditable="false" data-oe-t-inline="true"/>.<br/>
                    Favor remitir comprobante de transferencia una vez realiza la operación.
                    <br/>
                    El importe asciende a:
                    <t t-out="object.texto" contenteditable="false" data-oe-t-inline="true">
                    </t>
                    <br/>
                    En caso de haber realizado la transferencia, hacer caso omiso al presente recordatorio.<br/>
                    Atentamente,<br/>
                    Bolsa de Valores y Productos de Asunción S.A.<br/>
                    Bulnes 830 c/ España<br/>
                    Asunción – Paraguay<br/>
                    +595 21 728-9123/5<br/>
                    www.bolsadevalores.com.py<br/><br/><br/>
                    Saludos.
                </div>

            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>