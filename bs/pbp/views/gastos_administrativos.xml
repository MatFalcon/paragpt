<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="gastos_administrativos_view_form" model="ir.ui.view">
            <field name="name">gastos_administrativos_view_form</field>
            <field name="model">pbp.gastos_administrativos</field>
            <field name="arch" type="xml">
                <form>
                    <header name="header">
                        <field name="state" widget="statusbar"/>
                        <button string="Verificar" type="object" name="button_verificar"
                                class="oe_highlight" attrs="{'invisible':[('state','!=','no_verificado')]}"/>
                        <button string="Cancelar" type="object" name="button_cancelar"
                                class="oe_highlight" attrs="{'invisible':[('state','!=','verificado')]}"/>
                    </header>
                    <sheet>
                        <h3 class="oe_title">
                            <field name="name" attrs="{'readonly':True}"/>
                        </h3>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly':[('state','!=','no_verificado')]}"/>
                                <field name="fecha_operacion" attrs="{'readonly':[('state','!=','no_verificado')]}"/>
                                <field name="motivo" attrs="{'readonly':[('state','!=','no_verificado')]}"/>
                                <field name="monto" attrs="{'readonly':[('state','!=','no_verificado')]}" widget="monetary"/>
                                <field name="fecha_correccion" attrs="{'readonly':[('state','!=','no_verificado')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="gastos_administrativos_view_tree" model="ir.ui.view">
            <field name="name">gastos_administrativos_view_tree</field>
            <field name="model">pbp.gastos_administrativos</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="fecha_operacion"/>
                    <field name="motivo"/>
                    <field name="monto"/>
                    <field name="currency_id" invisible="1" force_save="1"/>
                    <field name="fecha_correccion"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="gastos_administrativos_search_view">
            <field name="name">gastos_administrativos_search_view</field>
            <field name="model">pbp.gastos_administrativos</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="motivo"/>
                    <field name="fecha_operacion"/>
                    <field name="state"/>
                    <filter string="No Verificados" name="filter_no_verificados" domain="[('state', '=', 'no_verificado')]"/>
                    <filter string="Cancelados" name="filter_cancelados" domain="[('state', '=', 'cancelado')]"/>
                    <filter string="Verificados" name="filter_verificados" domain="[('state', '=', 'verificado')]"/>
                </search>
            </field>
        </record>

        <record id="gastos_administrativos_act_window" model="ir.actions.act_window">
            <field name="name">Gastos Administrativos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pbp.gastos_administrativos</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>