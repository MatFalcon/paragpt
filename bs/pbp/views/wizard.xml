<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- pbp.wizard_move action window -->
    <record id="wizard_generar_facturas_action" model="ir.actions.act_window">
        <field name="name">Generar Facturas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pbp.wizard.facturas</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p>
        </field>
    </record>

    <!-- pbp.wizard_move form view -->
    <record id="wizard_generar_facturas_form" model="ir.ui.view">
        <field name="name">Generar Facturas</field>
        <field name="model">pbp.wizard.facturas</field>
        <field name="arch" type="xml">
            <form string="Generar Facturas">
                <sheet>
                    <group>
                        <group>
                            <field name="fecha_inicio"/>
                            <field name="fecha_fin"/>
                            <field name="fecha_factura"/>
                            <field name="partner_ids" widget="many2many_tags" domain="[('casa_bolsa','=',True)]"/>
                            <field name="modelos"/>
                        </group>
                    </group>

                    <footer>
                        <button name="button_generar_factura" type="object" string="Confirmar" class="oe_highlight"/>
                        <button string="Cancelar" special="cancel" class="btn-danger"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
