<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.actions.report" id="pbp.wizard_bancos_sudameris_report">
            <field name="name">Generar archivo TXT para pago a proveedores SUDAMERIS</field>
            <field name="model">pbp.wizard_bancos_sudameris</field>
            <field name="report_type">qweb-text</field>
            <field name="report_name">pbp.wizard_bancos_sudameris_report_t</field>
        </record>
        <!--
        El siguiente template no debe de tener saltos de linea para funcionar correctamente
        -->
        <template id="pbp.wizard_bancos_sudameris_report_t">
            <t t-foreach="docs" t-as="doc">
                <t t-esc="doc.get_values_for_report_bancos_sudameris()"/>
            </t>
        </template>
    </data>

    <data>
        <record id="wizard_bancos_sudameris_view_form" model="ir.ui.view">
            <field name="name">wizard_bancos_sudameris_view_form</field>
            <field name="model">pbp.wizard_bancos_sudameris</field>
            <field name="arch" type="xml">
                <form string="wizard_bancos_sudameris_form">
                    <sheet>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="currency_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_wizard_bancos_sudameris_report" string="Imprimir archivo TXT para el Banco SUDAMERIS" type="object"
                                class="oe_highlight"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_bancos_sudameris_view_action" model="ir.actions.act_window">
            <field name="name">Generar archivo TXT para en Banco SUDAMERIS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pbp.wizard_bancos_sudameris</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem
                id="wizard_bancos_sudameris_menuitem"
                name="Generar TXT para Banco SUDAMERIS"
                parent="pbp.liquidaciones_menu_root"
                action="wizard_bancos_sudameris_view_action"
        />
    </data>
</odoo>