<odoo>
    <data>
        <record id="view_account_financial_report_line_form" model="ir.ui.view">
            <field name="name">view_account_form</field>
            <field name="model">account.financial.html.report.line</field>
            <field name="inherit_id" ref="account_reports.view_account_financial_report_line_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="account_code"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_financial_report_line_tree" model="ir.ui.view">
            <field name="name">view_account_financial_report_line_tree</field>
            <field name="model">account.financial.html.report.line</field>
            <field name="inherit_id" ref="account_reports.view_account_financial_report_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="account_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>