<odoo>
    <data>
        <record id="view_bank_statement_form" model="ir.ui.view">
            <field name="name">view_bank_statement_form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state', '=', 'confirm')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='date']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_reconciled', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='payment_ref']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_reconciled', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_reconciled', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='ref']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_reconciled', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='amount']" position="attributes">
                    <attribute name="attrs">{'readonly':[('is_reconciled', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>