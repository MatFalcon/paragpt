<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="cuota_sen" string="Cuota S.E.N.">
                        <field name="cuota_sen_ids" readonly="1" domain="[('active','=',True)]">
                            <tree>
                                <field name="factura_cuota_sen_id"/>
                                <field name="sen_saldo_inicial"/>
                                <field name="sen_currency_id"/>
                                <field name="factura_id"/>
                                <field name="nota_credito_id"/>
                                <field name="nc_monto"/>
                                <!--field name="nc_currency_id"/-->
                                <field name="sen_saldo_final"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>