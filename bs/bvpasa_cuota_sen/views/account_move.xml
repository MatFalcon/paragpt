<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_type']" position="before">
                    <field name="mensaje_nc_cuota_sen" attrs="{'invisible':[('mensaje_nc_cuota_sen','=',False)]}" readonly="1"
                           style="font-size: 20px;color: orange;font-weight: bold;"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']/.." position="after">
                    <field name="factura_cuota_sen" attrs="{'invisible':[('move_type','!=','out_invoice')],'readonly':[('state','!=','draft')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>