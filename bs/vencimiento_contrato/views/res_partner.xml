<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form_inherit_vencimiento_contrato" model="ir.ui.view">
            <field name="name">view_partner_form_inherit_vencimiento_contrato</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="con_contrato"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="contratos" string="Contratos" groups="vencimiento_contrato.gestion_vencimiento" attrs="{'invisible':[('con_contrato', '=', False)]}">
                        <field name="contratos_ids" context="{'default_name':id}">
                            <tree editable="bottom">
                                <field name="name" invisible="1"/>
                                <field name="nombre_contrato"/>
                                <field name="fecha_inicio"/>
                                <field name="fecha_fin"/>
                                <field name="contrato_indefinido"/>
                                <field name="state" widget="badge" decoration-info="state == 'por_iniciar'" decoration-success="state == 'vigente'" decoration-danger="state == 'vencido'"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>