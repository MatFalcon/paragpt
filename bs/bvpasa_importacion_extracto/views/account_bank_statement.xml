<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_bank_statement_form_inherit" model="ir.ui.view">
            <field name="name">account_bank_statement_form_inherit</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='statement_line_ids']/field[@name='line_ids']" position="before">
                    <group attrs="{'invisible':[('state','=','confirm')]}">
                        <group>
                            <field name="archivo_xlsx" filename="nombre_xlsx" nolabel="1"/>
                            <field name="nombre_xlsx" invisible="1"/>
                        </group>
                        <group>
                            <button name="cargar_lineas" string="Cargar al sistema el extracto de cuenta" type="object"
                                    class="oe_highlight"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>