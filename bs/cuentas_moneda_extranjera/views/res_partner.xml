    <data >
       <!-- res.partner inherit form view -->
       <record id="view_partner_form" model="ir.ui.view">
           <field name="name">res.partner.inherit.view.form</field>
           <field name="model">res.partner</field>
           <field name="inherit_id" ref="base.view_partner_form"/>
           <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <field name="property_ext_account_receivable_id" domain="[('internal_type','=','receivable'),('deprecated','=',False),('company_id','=',current_company_id),('currency_id','!=',False)]"/>    
                    <field name="property_ext_account_payable_id" domain="[('internal_type','=','payable'),('deprecated','=',False),('company_id','=',current_company_id),('currency_id','!=',False)]"/>    
                </xpath>               
           </field>
       </record>
        
    </data>