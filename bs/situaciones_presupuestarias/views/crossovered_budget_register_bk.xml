<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_crossovered_budget_register_form" model="ir.ui.view">
            <field name="name">view.crossovered.budget.register.form</field>
            <field name="model">crossovered.budget.register</field>
            <field name="arch" type="xml">
                <form string="Agregar Lineas">
                    <group>
                        <field name="user_type_id"/>
                        <field name="general_budget_ids" force_save="1"/>
                        <field name="periodo"/>
                        <field name="analytic_account_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button string="Agregar lineas" name="action_create_lines" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
