<odoo>
    <data>
        <record model="ir.ui.view" id="tipo_cuentas">
            <field name="name">Asiento por Diferencia de Tipo de Cambio</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Asiento por Diferencia de Tipo de Cambio</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Cuentas Activas</span>
                                <div class="text-muted">
                                    Cuentas a filtrar para crear asiento por ganancia de cambio
                                </div>
                                <div class="text-muted">
                                    <field name="cuenta_ganancia_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Cuentas Pasivas</span>
                                <div class="text-muted">
                                    Cuentas a filtrar para crear asiento por pérdida de cambio
                                </div>
                                <div class="text-muted">
                                    <field name="cuenta_perdida_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Cuenta de Ganancia por diferencia de tipo de cambio</span>
                                <div class="text-muted">
                                    Cuenta de Ganancia por diferencia de tipo de cambio
                                </div>
                                <div class="text-muted">
                                    <field name="cuenta_ganancia_dif_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Cuenta de Pérdida por diferencia de tipo de cambio</span>
                                <div class="text-muted">
                                    Cuenta de Pérdida por diferencia de tipo de cambio
                                </div>
                                <div class="text-muted">
                                    <field name="cuenta_perdida_dif_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Diario por Diferencia de Tipo de Cambio</span>
                                <div class="text-muted">
                                    Diario por Diferencia de Tipo de Cambio
                                </div>
                                <div class="text-muted">
                                    <field name="journal_dif_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>