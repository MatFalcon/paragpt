<odoo>
    <record id="view_purchase_request_form_inherit_office" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.office</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="internal_purchase"/>
                <field name="lead_id" invisible="internal_purchase == True" required="internal_purchase == False"/>
            </field>
        </field>
    </record>
</odoo>
