<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="presale_currency_rate_form_view" model="ir.ui.view">
            <field name="name">presale_currency_rate.form</field>
            <field name="model">presale.currency_rate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                           <field name="team_id"/>
                           <field name="currency_id"/>
                           <field name="name"/>
                           <field name="rate"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="presale_currency_rate_tree_view" model="ir.ui.view">
            <field name="name">presale_currency_rate.tree</field>
            <field name="model">presale.currency_rate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="team_id"/>
                    <field name="currency_id"/>
                    <field name="name"/>
                    <field name="rate"/>
                </tree>
            </field>
        </record>

        <record id="presale_currency_rate_search_view" model="ir.ui.view">
            <field name="name">presale_currency_rate.search</field>
            <field name="model">presale.currency_rate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="currency_id"/>
                    <field name="name"/>
                    <group expand="1" string="Group By">
                        <filter string="Currency" name="currency_id" context="{'group_by':'currency_id'}"/>
                        <filter string="Date" name="name" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_presale_currency_rates" model="ir.actions.act_window">
            <field name="name">Currency Rates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">presale.currency_rate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new rates for currencys and presales projects
                </p>
            </field>
        </record>
    </data>
</odoo>