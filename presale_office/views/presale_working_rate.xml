<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="presale_working_rate_form_view" model="ir.ui.view">
            <field name="name">presale_working_rate.form</field>
            <field name="model">presale.working_rate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <!-- <field name="name"/>-->
                           <field name="team_id"/>
                           <field name="labor_type_id"/>
                           <field name="rate"/>
                           <field name="effective_date"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="presale_working_rate_tree_view" model="ir.ui.view">
            <field name="name">presale_working_rate.tree</field>
            <field name="model">presale.working_rate</field>
            <field name="arch" type="xml">
                <tree >
                    <!--  <field name="name"/>-->
                    <field name="team_id"/>
                    <field name="labor_type_id"/>
                    <field name="rate"/>
                    <field name="effective_date"/> 
                </tree>
            </field>
        </record>

        <record id="presale_working_rate_search_view" model="ir.ui.view">
            <field name="name">presale_working_rate.search</field>
            <field name="model">presale.working_rate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="team_id"/>
                    <field name="labor_type_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Team" name="team_id" context="{'group_by':'team_id'}"/>
                        <filter string="Labor type" name="labor_type_id" context="{'group_by':'labor_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_presale_working_rates" model="ir.actions.act_window">
            <field name="name">Working Rates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">presale.working_rate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new rates for labor types sales teams
                </p>
            </field>
        </record>
    </data>
</odoo>