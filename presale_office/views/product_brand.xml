<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_brand_form_view" model="ir.ui.view">
            <field name="name">product_brand.form.view</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <form string="Product Brand">
                    <sheet>
                        <field name="name"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_brand_tree_view" model="ir.ui.view">
            <field name="name">produt_brand.tree.view</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree string="Usuario Terminal">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_brand_model_action" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree,form</field>
        </record>

       <menuitem id="product_brand_menu_sale_id" parent="sale.product_menu_catalog" sequence="6" name="Product Brand" action="product_brand_model_action"/>
<!--       <menuitem id="product_brand_menu_purchase_id" parent="purchase.menu_product_in_config_purchase" sequence="31" name="Product Brand" action="product_brand_model_action"/>-->
       <menuitem id="product_brand_menu_purchase_id" parent="purchase.menu_purchase_products" sequence="20" name="Product Brand" action="product_brand_model_action"/>
      </data>
</odoo>