<?xml version="1.0"?>
<odoo>
    <template id="presale_preventa_informe">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row">
                        <div>
                            <p style="font-weight:bold; margin-bottom: 0;">FECHA: <span t-field="docs.income_date"/></p>
                            <p style="font-weight:bold; margin-bottom: 0;">CLIENTE: <span t-field="docs.partner_id.name"/></p>
                            <p style="font-weight:bold; margin-bottom: 0;">OBRA: <span t-field="docs.name"/></p>
                            <p style="font-weight:bold; margin-bottom: 0;">ATTE: <span t-field="docs.project_manager"/></p>
                            <p style="font-weight:bold; margin-bottom: 0;">P.N: <span t-field="docs.budget_sequence"/></p>
                            <p style="font-weight:bold; margin-bottom: 0;">REV: </p>
                        </div>
                        <div>
                            <img src="/presale/static/src/img/eco-logo.png" style="position:relative; left: 670px; bottom:30px;"/>
                        </div>
                    </div>

                    <div class="row">
                        <style>
                            /* Estilos para la tabla */
                            .custom-table {
                                border-collapse: collapse;
                                width: 100%;
                            }

                            .custom-table th, .custom-table td {
                                border: 1px solid black;
                                padding: 8px;
                                text-align: center;
                            }

                            .custom-table th {
                                background-color: black;
                                color: white;
                            }
                            .custom-heading-row {
                                background-color: #f2f2f2;
                             
                            }
                        </style>
                        <table class="custom-table">
                            <thead>
                                <tr>
                                    <th>Descripci√≥n</th>
                                    <th>Cantidad</th>
                                    <th>UM</th>
                                    <!-- <th>Materiales</th>
                                    <th>M. de Obra</th> -->
                                    <th>P. Unitario</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="heading_counter" t-value="1"/>
                                <t t-foreach="docs" t-as="o">

                                    <tr>
                                        <td colspan="2" style="text-align: left; background-color: #1f52a3; color: white; padding: 8px; font-weight:bold;">TOTAL IVA INCLUIDO</td>
                                        <td colspan="4" style="text-align: right; background-color: #1f52a3; color: white; padding: 8px; font-weight:bold;"><span t-esc="'{0:,.0f}'.format(o.price_vat_included).replace(',', '.')"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </div>
                <br/>
                <br/>
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>OBSERVACIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td style="text-align:left;"><span t-field="o.observations"></span></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <br/>
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>EXCLUSIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td style="text-align:left;"><span t-field="o.exclusions"></span></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <br/>
                <br/>
                <p style="margin-bottom:0px;">___________________________________________</p>
                <p style="margin-bottom:0px; margin-left:75px;">Aprobado</p>
                <br/>
                <br/>
                <br/>
                <div style="display:flex; flex-direction:row; justify-content: space-between;">
                    <div style="display:flex; flex-direction:column;">
                        <span>___________________________________________</span>
                        <span>Ing. Cristian Martinez</span>
                        <span>Jefe Comercial</span>
                        <span>comercial@ecoenergia.com.py</span>
                        <span>(0976) 223-888</span>
                    </div>
                    <div style="display:flex; flex-direction:column;">
                        <span>___________________________________________</span>
                        <span>Ing. Augusto Valdez</span>
                        <span>Gerente de Infraestructura</span>
                        <span>datos@ecoenergia.com.py</span>
                        <span>(0981)514-281</span>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
