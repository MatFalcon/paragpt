<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formato del papel -->
    <record id="paperformat_reporte" model="report.paperformat">
        <field name="name">A4 Format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="dpi">90</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
    </record>

        <!-- AcciÃ³n del informe -->
    <record id="action_report_off" model="ir.actions.report">
        <field name="name">Recibo de Cobranza Office</field>
        <field name="model">account.recibo</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">recibo_cobranza.recibo_cobranza_off</field>
        <field name="report_file">recibo_cobranza.recibo_cobranza_off</field>
        <field name="print_report_name">'Recibo - %s' % (object.name)</field>
<!--        <field name="binding_model_id" ref="model_account_recibo"/>-->
        <field name="paperformat_id" ref="paperformat_reporte"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
