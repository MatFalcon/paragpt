<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_paraguay.OrderReceipt">
        <div class="pos-receipt">
            <ReceiptHeader data="props.data.headerData" />
            <OrderWidget lines="props.data.orderlines" t-slot-scope="scope">
                <div id="items-cambio">
                    <table>
                        <thead>
                            <tr id="head-items" >
                                <td id="td-head">Cant</td>
                                <td id="td-head">Articulo</td>
                                <td id="td-head">Talla</td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="props.data.lineasFactura" t-as="linea" t-key="linea.id">
                                <tr>
                                    <td id="fila-cantidad">
                                        <t t-esc="linea.quantity"/>
                                    </td>
                                    <td id="fila-codbarra">
                                        <t t-if="linea.cod_barra">
                                            <t t-esc="linea.cod_barra" style="margin: 0;"/>
                                        </t>
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2" id="fila-nombre" style="margin-top: 0px;margin-bottom: 0px;">
                                        <div><t  t-esc="linea.nombre_ticket"/></div>
                                    </td>
                                    <td id="fila-tax" colspan="2">
                                        <t t-esc="linea.talla"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </OrderWidget>


        </div>

    </t>
</templates>
