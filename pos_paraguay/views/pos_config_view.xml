<?xml version="1.0" encoding="utf-8"?>

<odoo>
   <record id="view_pos_config_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_clear_cart</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="after">
                <h2 name="order">Campos Personalizados</h2>
                <div class="row mt16 o_settings_container" id="pos-multi-currency">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_habilitar_nro_tel" string="Nro de Telefono" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_tel_punto_venta" string="Nro de Telefono" />
                            <div class="text-muted">
                                Habilita el nro de telefono personalizado para el punto de venta. Si no se completa toma el de la compa√±ia.
                            </div>
                            <div class="content-group mt16" invisible="not pos_habilitar_nro_tel">
                                <field name="pos_tel_punto_venta"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">

                        <div class="o_setting_right_pane">
                            <label for="pos_descripcion_compania" string="Descripcion Corta" />
                            <div class="text-muted">
                                Este texto se mostrara en el ticket de venta en lugar de la actividad economica.
                            </div>
                            <div class="content-group mt16" invisible="not pos_habilitar_nro_tel">
                                <field name="pos_descripcion_compania"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16 o_settings_container" id="pos-multi-currency">

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
