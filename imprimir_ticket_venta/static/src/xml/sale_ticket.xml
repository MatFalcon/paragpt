<t t-name="SaleTicketTemplate">
    <div class="sale-ticket">
        <h3>Ticket de Venta</h3>
        <p>Cliente: <t t-esc="props.data.partner_name"/></p>
        <ul>
            <t t-foreach="props.data.lines" t-as="line">
                <li><t t-esc="line.product"/> - <t t-esc="line.price"/></li>
            </t>
        </ul>
        <p>Total: <t t-esc="props.data.total"/></p>
    </div>
</t>
